  
<!DOCTYPE html>
<html>
  <head>
    <title>Manyouapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <% if logged_in? %>
      <%= link_to "マイページ", user_path(current_user.id) %>
      <div><%= link_to "Logout", session_path(current_user.id), method: :delete %></div>
    <% else %>
      <%= link_to "Sign up", new_user_path, id: 'layouts-application_new_user_link' %>
      <%= link_to "Login", new_session_path, id: 'layouts-application_new_session_link' %>
    <% end %>
    <%= yield %>
  </body>
</html>