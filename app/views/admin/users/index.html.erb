<h1>管理画面/ユーザー一覧</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>ユーザー名</th>
    <th>管理者</th>
    <th>タスク数</th>
  </tr>
  </thead>
  <tbody>
<%  @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user_path(user.id) %></td>
    <td><%= user.admin %></td>
    <td><%= user.tasks.count  %>
    <td><%= link_to 'ユーザー情報詳細', admin_user_path(user.id), class: "btn btn-outline-primary" %></td>
    <td><%= link_to "ユーザー情報編集", edit_admin_user_path(user.id), class: "btn btn-outline-warning" %></td>
    <td><%= link_to 'ユーザー情報削除', admin_user_path(user.id), class: "btn btn-outline-danger", method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
<%= link_to '新規ユーザー登録', new_admin_user_path, class: "btn btn-dark btn-lg" %>