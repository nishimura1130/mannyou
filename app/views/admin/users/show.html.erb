
<h1>ユーザー詳細画面</h1>
<table class="table table-striped">
  <thead>

    <tr>
      <th>ユーザー名 :<%= @user.name %></th>
      <th>メールアドレス :<%= @user.email %></th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <th>タイトル</th>
    <th>期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>
  </tbody>
   <tfoot>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.task_limit_on %></td>
      <td><%= task.task_status %></td>
      <td><%= task.priority %></td>
    </tr>
    <% end %>
  </tfoot>
</table>
<%= link_to '管理者画面/ユーザー一覧へ', admin_users_path, class: "btn btn-dark btn-lg" %>